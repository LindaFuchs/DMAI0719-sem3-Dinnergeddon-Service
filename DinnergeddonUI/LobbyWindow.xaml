<Window x:Class="DinnergeddonUI.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinnergeddonUI"
        mc:Ignorable="d"
        Background="{StaticResource BackgroundColor}"
        Title="Lobby" Height="450" Width="800">
    <DockPanel>
        <TextBlock FontSize="16" Foreground="White" Margin="15" DockPanel.Dock="Top" Text="Lobby"></TextBlock>

        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15" Padding="10" Content="Exit Lobby" ></Button>
        <ListBox  Margin="15">

        </ListBox>
    </DockPanel>
</Window>