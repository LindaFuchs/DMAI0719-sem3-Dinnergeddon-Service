@{
    ViewBag.Title = "Dinnergeddon";
}
<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1 class="display-4">Dinnergeddon</h1>
        <p class="lead">Eating at a restaurant has never been this exciting!</p>
        <a class=" btn btn-lg btn-info" href="@Url.Action("Download")"><span class="glyphicon glyphicon-download"></span>  Download</a>

        @if (!Request.IsAuthenticated)
        {
            
            <a class=" btn btn-lg btn-outline-danger" href="@Url.Action("Register", "Account")">Register now</a>
        }
    </div>
    
</div>
<div class=" container-fluid p-5" style="background:#272727;">
    <div class="row justify-content-center" >
        <div class="col-sm-4 text-white">
            <div class="text-center"><span class="glyphicon glyphicon-user" style="font-size:50px"></span></div>
            <br />

            <h3 class="text-center">Groot</h3>
            <p class="text-center">I am groot</p>
        </div>
        <div class="col-sm-4 text-white">
            <div class="text-center"><span class="glyphicon glyphicon-user" style="font-size:50px"></span></div>
            <br />

            <h3 class="text-center">Bob Ross</h3>
            <p class="text-center">
                Before I started playing, I thought dinner was always the same; a plate with some food arranged a certain way.
                Oh boy did this game surprise me with its happy zombies and exciting atmosphere!.
            </p>
        </div>
        <div class="col-sm-4 text-white">
            <div class="text-center"><span class="glyphicon glyphicon-user" style="font-size:50px"></span></div>
            <br />

            <h3 class="text-center">J. Judy</h3>
            <p class="text-center">I don't often judge... But this game, it was awesome. 10/10 </p>
        </div>
    </div>
</div>
<div class="container-fluid p-4">
    <div class="row justify-content-center ">
        <div class="col-md-8">
            <h1 class="text-center">
                About the game
            </h1>
            <br />
            <p class="text-center">Imagine a nice quiet evening at a restaurant with your family and friends. when suddenly...</p>
            <p class="text-center">ZOMBIE ATTACK !!!</p>
            <img class="m-auto" src="~/images/Screenshot.png" />
        </div>
       
    </div>
</div>
