<Window x:Class="DinnergeddonUI.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinnergeddonUI"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800"
        Background="{DynamicResource BackgroundColor}"
    x:Name="DashboardWindow">

    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Button Command="{Binding JoinLobbyCommand, Mode=OneTime}" CommandParameter="{Binding ElementName=DashboardWindow}"  VerticalAlignment="Center" FontWeight="Bold" Foreground="Black" Background="#fff7ed" Style="{StaticResource RoundButtonTemplate}" Margin="10" Padding="10" Content="Join"></Button>

            <Button Command="{Binding LogoutCommand, Mode=OneTime}"
                    CommandParameter="{Binding ElementName=DashboardWindow}"

                               Background="Gray"
 FontSize="14" DockPanel.Dock="Left" Content="Back" 
                    HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                    Margin="15"  
                     Style="{StaticResource RoundButtonTemplate}"></Button>
            <Button 
                FontSize="14"
                Margin="0,0,30,0"
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                VerticalAlignment="Bottom"
            Style="{DynamicResource RoundButtonTemplate}"
            Foreground="White"
            Content="Create lobby" Click="Button_Click">
            </Button>
            <TextBlock Text="{Binding AuthenticatedUser}" FontSize="15" DockPanel.Dock="Top" HorizontalAlignment="Right" Foreground="White" />
        </DockPanel>

        <!--Lobby text-->
        <TextBlock Margin="20,10,0,0" FontSize="16" Foreground="White" Background="{StaticResource BackgroundColor}" DockPanel.Dock="Top" Text="Lobbies"></TextBlock>

