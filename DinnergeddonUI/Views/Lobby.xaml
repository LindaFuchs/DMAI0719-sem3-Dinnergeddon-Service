<UserControl x:Class="DinnergeddonUI.Views.Lobby"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DinnergeddonUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="{Binding LobbyName}"></TextBlock>
        
        <Button DockPanel.Dock="Top" Content="Leave lobby" Command="{Binding LeaveLobbyCommand}"></Button>
        <TextBlock Text="ASDASDSAD"></TextBlock>

        <ListView  ItemsSource="{Binding JoinedPlayers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding Username}" FontWeight="Bold" />
                        
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</UserControl>
